BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles
#            text: '34'
            font_size: 48
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(miles.text, -1)
    Label:
        id: output
        text: app.output_km
        font_size: 48
        color: (5, 5, 0, 1)